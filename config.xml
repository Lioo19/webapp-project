<?xml version='1.0' encoding='utf-8'?>
<widget id="se.dbwebb.lager" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>UTLED</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="www/res/screen/ios/Default@2x~universal~anyany.png" />
        <preference name="SplashScreenDelay" value="5000" /> -->
        <icon src="www/res/icon/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="www/res/icon/ios/icon-60@3x.png" width="180" height="180" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="www/res/screen/ios/Default@2x~universal~anyany.png"/>
        <preference name="SplashScreenDelay" value="5000" />
        <preference name="ShowSplashScreen" value="true" />
        <!-- <preference name="SplashScreenWidth" value="600" /> -->
        <!-- <preference name="SplashScreenHeight" value="300" />-->
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="I will use your GPS position to show on a map." />
    </plugin>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>I will use your GPS to show your position on a map.</string>
    </edit-config>

</widget>
